<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/cardview_light_background">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_meetingRecyclerViewAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/contentDesc_imageView_MareuFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circular_view" />

    <TextView
        android:id="@+id/textView_meetingRecyclerViewItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"

        android:text="text"
        app:layout_constraintStart_toEndOf="@id/imageView_meetingRecyclerViewAvatar"
        app:layout_constraintTop_toTopOf="@id/imageView_meetingRecyclerViewAvatar" />

    <TextView
        android:id="@+id/textView_meetingRecyclerViewItem_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="text"
        app:layout_constraintStart_toStartOf="@id/textView_meetingRecyclerViewItem_title"
        app:layout_constraintTop_toBottomOf="@id/textView_meetingRecyclerViewItem_title" />

    <ImageButton
        android:id="@+id/imageButton_meetingRecyclerViewItem_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>